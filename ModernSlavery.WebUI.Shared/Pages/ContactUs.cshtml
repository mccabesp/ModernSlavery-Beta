@page "/contact-us"
@model ModernSlavery.WebUI.Shared.Pages.ContactUsModel
@using ModernSlavery.Core.Models
@inject SharedOptions sharedOptions
@{
    Layout = "~/Views/DfeTemplate.cshtml";
    ViewBag.Title = "Contact us - Modern Slavery reporting service";
}
<div id="contact-us-content" class="grid-row">
    <div class="column-two-thirds">

        <h1 class="heading-large ">
            Contact Us
        </h1>
        <h2 class="heading-medium">Email</h2>
        <p>
            If you are an employer you can contact the Modern Slavery team about the service or registration issues you're having at <a href="mailto:@(sharedOptions.GpgReportingEmail)" target="_blank">@sharedOptions.GpgReportingEmail</a>
        </p>

        <h2 class="heading-medium">Online</h2>
        <p>If you would like to leave general feedback on the service please complete this <a asp-action="SendFeedback" asp-controller="shared">online form</a>.</p>
        <p>Read our guidance to <a href="https://www.gov.uk/guidance/gender-pay-gap-reporting-overview" target="_blank" rel="noopener noreferrer">Modern Slavery reporting</a>.</p>

        <h2 class="heading-medium">Post</h2>
        <p>
            Write to the Government Equalities Office:
        </p>
        <div class="panel">
            <address style="font-style: normal">
                Modern Slavery team<br />
                Government Equalities Office<br />
                6th Floor, Sanctuary Buildings<br />
                Great Smith Street<br />
                London<br />
                SW1P 3BT
            </address>
        </div>
        <p></p>
        <p class="script-only" style="text-align: center;">
            <button class="button" onclick="windowClose()">Close Window</button>
        </p>
    </div>
</div>