@using ModernSlavery.WebUI.Shared.Interfaces
@using ModernSlavery.Core.Models

@{
    var ClientName = "Submit a modern slavery statement service";
    Layout = "~/Views/DfeTemplate.cshtml";
    ViewBag.Title = $"Session expired - {ClientName} - GOV.UK";
}

<div class="grid-row">
    <div class="column-two-thirds">
        <div class="govuk-box-highlight">
            <h1 class="bold-large">Session expired</h1>
        </div>
        <p>Your session has expired and you are now signed out of the <span>@ClientName</span>.</p>

        <div>
            <div class="subsection panel-indent">
                <div class="bold-small">Click the button below to sign in again.</div>
            </div>

            <p></p>
            <a class="button" asp-action="ManageOrganisations" asp-controller="Submission" asp-area="Submission" role="button">Sign in</a>
        </div>
    </div>
</div>