@{
    Layout = "/Views/GdsLayout.cshtml";
}
@model CompliancePageViewModel
<a class="govuk-back-link" href="@Model.BackUrl">Back</a>
<div class="govuk-grid-row">
    <div class="govuk-column-two-thirds">
        @using (Html.BeginForm())
        {
            var controller = ViewData["Controller"] as BaseController;

            @await Html.CustomValidationSummaryAsync();
            @Html.AntiForgeryToken();
            @Html.HiddenFor(m => m.ContinueUrl);

            @(Html.GovUkErrorSummary(new[]
                {
                    nameof(CompliancePageViewModel.IncludesStructure),
                    nameof(CompliancePageViewModel.IncludesPolicies),
                    nameof(CompliancePageViewModel.IncludesRisks),
                    nameof(CompliancePageViewModel.IncludesDueDiligence),
                    nameof(CompliancePageViewModel.IncludesTraining),
                    nameof(CompliancePageViewModel.IncludesGoals)
                }))

        <h1 class="govuk-heading-l">
            @Model.PageTitle
        </h1>

            <h2 class="govuk-heading-m">
                Does your modern slavery statement cover the following areas in relation to slavery and human trafficking?
            </h2>

            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h2 class="govuk-heading-m">
                            Your organisation’s structure, business and supply chains
                        </h2>
                    </legend>
                    <div class="govuk-radios govuk-radios--conditional" data-module="govuk-radios">
                        <div class="govuk-radios__item">
                            <input asp-for="IncludesStructure" value="true" class="govuk-radios__input" id="IncludeStructure_True" name="include-structure" type="radio">
                            <label class="govuk-label govuk-radios__label">
                                Yes
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input asp-for="IncludesStructure" value="false" class="govuk-radios__input" id="include-structure-conditional" name="include-structure" type="radio" data-aria-controls="conditional-include-structure-conditional">
                            <label class="govuk-label govuk-radios__label" for="include-structure-conditional">
                                No
                            </label>
                        </div>
                        <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-include-structure-conditional">
                            <div class="govuk-form-group">
                                <label class="govuk-label" for="include-structure-detail">
                                    Please provide detail
                                </label>
                                <textarea asp-for="StructureDetails" class="govuk-textarea govuk-!-width-two-thirds" rows="5" id="include-structure-detail" name="include-structure-detail" type="text"> </textarea>

                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>

            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h2 class="govuk-heading-m">
                            Policies
                        </h2>
                    </legend>
                    <div class="govuk-radios govuk-radios--conditional" data-module="govuk-radios">
                        <div class="govuk-radios__item">
                            <input asp-for="IncludesPolicies" value="true" class="govuk-radios__input" id="include-policies" name="include-policies" type="radio">
                            <label class="govuk-label govuk-radios__label">
                                Yes
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input asp-for="IncludesPolicies" value="false" class="govuk-radios__input" id="include-policies-conditional" name="include-policies" type="radio" data-aria-controls="conditional-include-policies-conditional">
                            <label class="govuk-label govuk-radios__label" for="include-policies-conditional">
                                No
                            </label>
                        </div>
                        <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-include-policies-conditional">
                            <div class="govuk-form-group">
                                <label class="govuk-label" for="include-policies-detail">
                                    Please provide detail
                                </label>
                                <textarea asp-for="PolicyDetails" class="govuk-textarea govuk-!-width-two-thirds" rows="5" id="include-policies-detail" name="include-policies-detail" type="text"></textarea>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h2 class="govuk-heading-m">
                            Risk assessment and management
                        </h2>
                    </legend>
                    <div class="govuk-radios govuk-radios--conditional" data-module="govuk-radios">
                        <div class="govuk-radios__item">
                            <input asp-for="IncludesRisks" value="true" class="govuk-radios__input" id="include-risks" name="include-risks" type="radio">
                            <label class="govuk-label govuk-radios__label">
                                Yes
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input asp-for="IncludesRisks" value="false" class="govuk-radios__input" id="include-risks-conditional" name="include-risks" type="radio" data-aria-controls="conditional-include-risks-conditional">
                            <label class="govuk-label govuk-radios__label" for="include-risks-conditional">
                                No
                            </label>
                        </div>
                        <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-include-risks-conditional">
                            <div class="govuk-form-group">
                                <label class="govuk-label" for="include-risks-detail">
                                    Please provide detail
                                </label>
                                <textarea asp-for="IncludesRisks" class="govuk-textarea govuk-!-width-two-thirds" rows="5" id="include-risks-detail" name="include-risks-detail" type="text"></textarea>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>

            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h2 class="govuk-heading-m">
                            Due diligence processes
                        </h2>
                    </legend>
                    <div class="govuk-radios govuk-radios--conditional" data-module="govuk-radios">
                        <div class="govuk-radios__item">
                            <input asp-for="IncludesDueDiligence" value="true" class="govuk-radios__input" id="include-methods" name="include-methods" type="radio">
                            <label class="govuk-label govuk-radios__label">
                                Yes
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input asp-for="RisksDetails" value="false" class="govuk-radios__input" id="include-methods-conditional" name="include-methods" type="radio" data-aria-controls="conditional-include-methods-conditional">
                            <label class="govuk-label govuk-radios__label" for="include-methods-conditional">
                                No
                            </label>
                        </div>
                        <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-include-methods-conditional">
                            <div class="govuk-form-group">
                                <label class="govuk-label" for="include-methods-detail">
                                    Please provide detail
                                </label>
                                <textarea asp-for="IncludesDueDiligence" class="govuk-textarea govuk-!-width-two-thirds" rows="5" id="include-methods-detail" name="include-methods-detail" type="text"></textarea>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h2 class="govuk-heading-m">
                            Staff training about slavery and human trafficking
                        </h2>
                    </legend>
                    <div class="govuk-radios govuk-radios--conditional" data-module="govuk-radios">
                        <div class="govuk-radios__item">
                            <input asp-for="IncludesTraining" value="true" class="govuk-radios__input" id="include-training" name="include-training" type="radio">
                            <label class="govuk-label govuk-radios__label">
                                Yes
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input asp-for="IncludesDueDiligence" value="false" class="govuk-radios__input" id="include-training-conditional" name="include-training" type="radio" data-aria-controls="conditional-include-training-conditional">
                            <label class="govuk-label govuk-radios__label" for="include-training-conditional">
                                No
                            </label>
                        </div>
                        <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-include-training-conditional">
                            <div class="govuk-form-group">
                                <label class="govuk-label" for="include-training-detail">
                                    Please provide detail
                                </label>
                                <textarea asp-for="DueDiligenceDetails" class="govuk-textarea govuk-!-width-two-thirds" rows="5" id="include-training-detail" name="include-training-detail" type="text"></textarea>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>

            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h2 class="govuk-heading-m">
                            Goals and key performance indicators (KPIs) to measure your progress over time, and the effectiveness of your actions
                        </h2>
                    </legend>

                    <div class="govuk-radios govuk-radios--conditional" data-module="govuk-radios">
                        <div class="govuk-radios__item">
                            <input asp-for="IncludesTraining" value="true" class="govuk-radios__input" id="include-effectiveness" name="include-effectiveness" type="radio">
                            <label class="govuk-label govuk-radios__label">
                                Yes
                            </label>
                        </div>

                        <div class="govuk-radios__item">
                            <input asp-for="IncludesTraining" value="false" class="govuk-radios__input" id="include-effectiveness-conditional" name="include-effectiveness" type="radio" data-aria-controls="conditional-include-effectiveness-conditional">
                            <label class="govuk-label govuk-radios__label" for="include-effectiveness-conditional">
                                No
                            </label>
                        </div>
                        <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-include-effectiveness-conditional">
                            <div class="govuk-form-group">
                                <label class="govuk-label" for="include-effectiveness-detail">
                                    Please provide detail
                                </label>
                                <textarea asp-for="TrainingDetails" class="govuk-textarea govuk-!-width-two-thirds" rows="5" id="include-effectiveness-detail" name="include-effectiveness-detail" type="text"></textarea>
                            </div>

                        </div>
                    </div>
                </fieldset>
            </div>

            <button class="govuk-button" data-module="govuk-button" type="submit">
                Continue
            </button>
            <a class="govuk-button govuk-button--secondary" href="@Model.CancelUrl">Cancel</a>
        }
    </div>
</div>
