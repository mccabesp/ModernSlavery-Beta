@{
    Layout = "/Views/GdsLayout.cshtml";
}
@model SubmissionCompleteViewModel
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken();
            @Html.HiddenFor(m => m.ReturnToReviewPage);
            @Html.HiddenFor(m => m.Submitted);

            <div class="govuk-panel govuk-panel--confirmation">
                <h1 class="govuk-panel__title">
                    @Model.PageTitle
                </h1>
            </div>
            <div>
                <div class="govuk-panel">
                    You've submitted your Modern Slavery Statement<br /> for @(Model.ReportingDeadlineYear-1) to @((Model.ReportingDeadlineYear))
                </div>
            </div>

            <a href="@Model.ContinueUrl" class="govuk-button">Manage Organisations</a>
            <a asp-action="SignOut" asp-controller="Account" asp-area="Account" class="govuk-button govuk-button--secondary">Finish and sign out</a>
        }

    </div>
</div>
