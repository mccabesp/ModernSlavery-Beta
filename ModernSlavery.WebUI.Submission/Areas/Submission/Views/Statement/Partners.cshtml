@{
    Layout = "/Views/GdsLayout.cshtml";
}
@model PartnersViewModel
@using ModernSlavery.Core.Entities.StatementSummary;
@using static ModernSlavery.Core.Entities.StatementSummary.IStatementSummary1;
@section BeforeMain {
    <a class="govuk-back-link" href="@Model.BackUrl">Back</a>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { novalidate = "" }))
        {
            @await Html.GovUkValidationSummaryAsync();
            @Html.AntiForgeryToken();
            @Html.HiddenFor(m => m.Submitted);
            @Html.HiddenFor(m => m.OrganisationId);
            @Html.HiddenFor(m => m.SubmissionDeadline);

            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset" aria-describedby="conditions-hint">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h1 class="govuk-fieldset__heading">
                            @Model.PageTitle
                        </h1>
                    </legend>

                    <span id="conditions-hint" class="govuk-hint">
                        Select all that apply
                    </span>
                    <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                        @foreach (var partnerType in Enums.GetValuesExcept<PartnerTypes>(PartnerTypes.Unknown))
                        {
                            var value = (int)partnerType;
                            var isOther = partnerType == PartnerTypes.Other;
                            var isNone = partnerType == PartnerTypes.None;

                            if (isNone)
                            {
                                <div class="govuk-!-margin-bottom-2">
                                    or
                                </div>
                            }

                            <div class="govuk-checkboxes__item">
                                <input name="Partners" value="@value" id="@($"partner{value}")" checked=@(Model.Partners.Contains(partnerType)) class="govuk-checkboxes__input" type="checkbox" data-aria-controls="partners-conditional-@value">
                                <label class="govuk-label govuk-checkboxes__label" for="@($"partner{value}")">
                                    @partnerType.GetEnumDescription()
                                    @if (partnerType == IStatementSummary1.PartnerTypes.Other)
                                    {
                                        <span class="govuk-hint">For example, within the same industry</span>
                                    }
                                </label>
                            </div>
                            @*@if (partnerType == IStatementSummary1.PartnerTypes.Other)
                                {
                                    <div class="govuk-checkboxes__conditional govuk-checkboxes__conditional--hidden @Html.SetErrorClass(model => model.OtherPartners, "govuk-form-group--error")" id="partners-conditional-@((int)partnerType)">
                                        <div class="govuk-form-group">
                                            <label class="govuk-label" for="other">
                                                Please specify
                                            </label>
                                            <input asp-for="OtherPartners" class="govuk-input" spellcheck="false">
                                            <span asp-validation-for="OtherPartners" class="govuk-error-message"></span>
                                        </div>
                                    </div>
                                }*@
                        }
                    </div>
                </fieldset>
            </div>

            <button class="govuk-button govuk-!-margin-right-1" data-module="govuk-button" type="submit" name="command" value="@BaseViewModel.CommandType.Continue">
                Save and continue
            </button>

            @if (Model.GetStatus() == BaseViewModel.Status.Incomplete)
            {
                <span class="skip-link">
                    <a class="govuk-link" href="@(Model.SkipUrl)">Skip this question</a>
                </span>
            }
        }
    </div>

</div>
