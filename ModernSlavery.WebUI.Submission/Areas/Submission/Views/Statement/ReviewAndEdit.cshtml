@{
    Layout = "/Views/GdsLayout.cshtml";
}
@model ReviewViewModel

@section BeforeMain {
    @if (!string.IsNullOrWhiteSpace(Model.BackUrl))
    {
        <a class="govuk-back-link" href="@Model.BackUrl">Back</a>
    }
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @using (Html.BeginForm())
        {
            @await Html.GovUkValidationSummaryAsync();
            @Html.AntiForgeryToken();
            @Html.HiddenFor(m => m.Submitted);


            <h1 class="govuk-heading-l">
                @Model.PageTitle
            </h1>

            <h2 class="govuk-heading-s">
                @Model.ReportingDeadlineYear modern slavery statement for @(Model.OrganisationName)
            </h2>

            <p class="govuk-body">
                If you want to check your answers, click on the relevant link below.
            </p>

            <ol class="app-task-list">
                <li>
                    <h2 class="govuk-heading-s app-task-list__section">
                        Required information about your statement
                    </h2>
                    <ul class="govuk-list app-task-list__items">
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                <a class="govuk-link" href="@Model.GroupReportingUrl" aria-describedby="slavery-statement">
                                    Who is your statement for?
                                </a>
                            </span>
                            <strong class="govuk-tag @(Model.GroupOrganisationsPages.GetStatus()== BaseViewModel.Status.Complete ? "" : "govuk-tag--grey") app-task-list__tag" id="slavery-statement">@(Model.GroupOrganisationsPages.GetStatus().GetEnumDescription().ToUpper())</strong>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                <a class="govuk-link" href="@Model.UrlSignOffUrl" aria-describedby="slavery-statement">
                                    Who is your statement for?
                                </a>
                            </span>
                            <strong class="govuk-tag @(Model.GetUrlSignOffStatus()== BaseViewModel.Status.Complete ? "" : "govuk-tag--grey") app-task-list__tag" id="slavery-statement">@(Model.GetUrlSignOffStatus().GetEnumDescription().ToUpper())</strong>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                <a class="govuk-link" href="@Model.ComplianceUrl" aria-describedby="slavery-statement">
                                    Who is your statement for?
                                </a>
                            </span>
                            <strong class="govuk-tag @(Model.CompliancePage.GetStatus()== BaseViewModel.Status.Complete ? "" : "govuk-tag--grey") app-task-list__tag" id="slavery-statement">@(Model.CompliancePage.GetStatus().GetEnumDescription().ToUpper())</strong>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                <a class="govuk-link" href="@Model.SectorsUrl" aria-describedby="slavery-statement">
                                    Who is your statement for?
                                </a>
                            </span>
                            <strong class="govuk-tag @(Model.GetSectorTurnoverStatus()== BaseViewModel.Status.Complete ? "" : "govuk-tag--grey") app-task-list__tag" id="slavery-statement">@(Model.GetSectorTurnoverStatus().GetEnumDescription().ToUpper())</strong>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                <a class="govuk-link" href="@Model.YearsUrl" aria-describedby="slavery-statement">
                                    Who is your statement for?
                                </a>
                            </span>
                            <strong class="govuk-tag @(Model.YearsPage.GetStatus()== BaseViewModel.Status.Complete ? "" : "govuk-tag--grey") app-task-list__tag" id="slavery-statement">@(Model.YearsPage.GetStatus().GetEnumDescription().ToUpper())</strong>
                        </li>
                    </ul>
                </li>

                <li>
                    <h2 class="govuk-heading-s app-task-list__section">
                        Additional information about your statement
                    </h2>
                    <ul class="govuk-list app-task-list__items">
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                <a class="govuk-link" href="@Model.PoliciesUrl" aria-describedby="Policies">
                                    Policies
                                </a>
                            </span>
                            <strong class="govuk-tag @(Model.PoliciesPage.GetStatus()== BaseViewModel.Status.Complete ? "" : "govuk-tag--grey") app-task-list__tag" id="slavery-statement">@(Model.PoliciesPage.GetStatus().GetEnumDescription().ToUpper())</strong>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                <a class="govuk-link" href="@Model.TrainingUrl" aria-describedby="training">
                                    Training
                                </a>
                            </span>
                            <strong class="govuk-tag @(Model.TrainingPage.GetStatus()== BaseViewModel.Status.Complete ? "" : "govuk-tag--grey") app-task-list__tag" id="slavery-statement">@(Model.TrainingPage.GetStatus().GetEnumDescription().ToUpper())</strong>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                <a class="govuk-link" href="@Model.WorkingConditionsUrl" aria-describedby="monitoring-progress">
                                    Monitoring progress
                                </a>
                            </span>
                            <strong class="govuk-tag @(Model.GetWorkingConditionsStatus()== BaseViewModel.Status.Complete ? "" : "govuk-tag--grey") app-task-list__tag" id="slavery-statement">@(Model.GetWorkingConditionsStatus().GetEnumDescription().ToUpper())</strong>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                <a class="govuk-link" href="@Model.RisksUrl" aria-describedby="monitoring-progress">
                                    Monitoring progress
                                </a>
                            </span>
                            <strong class="govuk-tag @(Model.GetRisksStatus()== BaseViewModel.Status.Complete ? "" : "govuk-tag--grey") app-task-list__tag" id="slavery-statement">@(Model.GetRisksStatus().GetEnumDescription().ToUpper())</strong>
                        </li>

                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                <a class="govuk-link" href="@Model.IndicatorsUrl" aria-describedby="monitoring-progress">
                                    Monitoring progress
                                </a>
                            </span>
                            <strong class="govuk-tag @(Model.GetIndicatorRemediationsStatus()== BaseViewModel.Status.Complete ? "" : "govuk-tag--grey") app-task-list__tag" id="slavery-statement">@(Model.GetIndicatorRemediationsStatus().GetEnumDescription().ToUpper())</strong>
                        </li>

                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                <a class="govuk-link" href="@Model.ProgressUrl" aria-describedby="monitoring-progress">
                                    Monitoring progress
                                </a>
                            </span>
                            <strong class="govuk-tag @(Model.ProgressPage.GetStatus()== BaseViewModel.Status.Complete ? "" : "govuk-tag--grey") app-task-list__tag" id="slavery-statement">@(Model.ProgressPage.GetStatus().GetEnumDescription().ToUpper())</strong>
                        </li>
                    </ul>
                </li>
            </ol>

            <button class="govuk-button govuk-!-margin-right-1" data-module="govuk-button" disabled="@(!Model.CanSubmit())" name="command" value="@BaseViewModel.CommandType.Submit">
                Submit for publication
            </button>

            <button class="govuk-button govuk-button--secondary" name="command" value="@BaseViewModel.CommandType.Skip">
                Return to manage all statements
            </button>
        }
    </div>
</div>



