@{
    Layout = "/Views/GdsLayout.cshtml";
}
@model ReviewPageViewModel
<a class="govuk-back-link" href="@Model.BackUrl">Back</a>
<div class="govuk-grid-row">
    <div class="govuk-column-two-thirds">
        @using (Html.BeginForm())
        {
            var controller = ViewData["Controller"] as BaseController;

            @await Html.CustomValidationSummaryAsync();
            @Html.AntiForgeryToken();
            @Html.HiddenFor(m => m.ContinueUrl);

            <h1 class="govuk-heading-l">
                @Model.PageTitle
            </h1>

            <p class="govuk-body govuk-!-margin-bottom-7">Submission incomplete</p> @*//TODO: get the correct text based on sections completed*@

            <ol class="app-task-list">
                <li>
                    <h2 class="app-task-list__section">
                        <span class="app-task-list__section-number">1. </span> Required information about your statement
                    </h2>
                    <ul class="app-task-list__items">
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                <a href="@(Url.Action("YourStatement"))" aria-describedby="slavery-statement">
                                    Your modern slavery statement
                                </a>
                            </span>
                            <strong class="@(Model.YourStatement.IsComplete() ? "govuk-tag app-task-list__tag" : "govuk-tag govuk-tag--grey app-task-list__tag" )" id="slavery-statement">@(Model.YourStatement.IsComplete() ? "COMPLETED" : "NOT COMPLETED")</strong>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                <a href="@(Url.Action("Compliance"))" aria-describedby="compliance">
                                    Areas covered by your modern statement
                                </a>
                            </span>
                            <strong class="@(Model.Compliance.IsComplete() ? "govuk-tag app-task-list__tag" : "govuk-tag govuk-tag--grey app-task-list__tag" )" id="compliance">@(Model.Compliance.IsComplete() ? "COMPLETED" : "NOT COMPLETED")</strong>
                        </li>
                    </ul>
                </li>

                <li>
                    <h2 class="app-task-list__section">
                        <span class="app-task-list__section-number">2. </span> Additional information about your statement
                    </h2>
                    <ul class="app-task-list__items">
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                <a href="@(Url.Action("YourOrganisation"))" aria-describedby="organisation">
                                    Your Organisation
                                </a>
                            </span>
                            <strong class="@(Model.Organisation.IsComplete() ? "govuk-tag app-task-list__tag" : "govuk-tag govuk-tag--grey app-task-list__tag" )" id="organisation">@(Model.Organisation.IsComplete() ? "COMPLETED" : "NOT COMPLETED")</strong>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                <a href="@(Url.Action("Policies"))" aria-describedby="Policies">
                                    Policies
                                </a>
                            </span>
                            <strong class="@(Model.Policies.IsComplete() ? "govuk-tag app-task-list__tag" : "govuk-tag govuk-tag--grey app-task-list__tag" )" id="policies">@(Model.Policies.IsComplete() ? "COMPLETED" : "NOT COMPLETED")</strong>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                <a href="@(Url.Action("SupplyChainRisks"))" aria-describedby="supply-risks-part-1">
                                    Supply chain risks and due diligence (part 1)
                                </a>
                            </span>
                            <strong class="@(Model.Risks.IsComplete() ? "govuk-tag app-task-list__tag" : "govuk-tag govuk-tag--grey app-task-list__tag" )" id="supply-risks-part-1">@(Model.Risks.IsComplete() ? "COMPLETED" : "NOT COMPLETED")</strong>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                <a href="@(Url.Action("DueDiligence"))" aria-describedby="supply-risks-part-2">
                                    Supply chain risks and due diligence (part 2)
                                </a>
                            </span>
                            <strong class="@(Model.DueDiligence.IsComplete() ? "govuk-tag app-task-list__tag" : "govuk-tag govuk-tag--grey app-task-list__tag" )" id="supply-risks-part-2">@(Model.DueDiligence.IsComplete() ? "COMPLETED" : "NOT COMPLETED")</strong>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                <a href="@(Url.Action("Training"))" aria-describedby="training">
                                    Training
                                </a>
                            </span>
                            <strong class="@(Model.Training.IsComplete() ? "govuk-tag app-task-list__tag" : "govuk-tag govuk-tag--grey app-task-list__tag" )" id="training">@(Model.Training.IsComplete() ? "COMPLETED" : "NOT COMPLETED")</strong>
                        </li>
                        <li class="app-task-list__item">
                            <span class="app-task-list__task-name">
                                <a href="@(Url.Action("MonitoringProgress"))" aria-describedby="monitoring-progress">
                                    Monitoring Progress
                                </a>
                            </span>
                            <strong class="@(Model.Progress.IsComplete() ? "govuk-tag app-task-list__tag" : "govuk-tag govuk-tag--grey app-task-list__tag" )" id="monitoring-progress">@(Model.Progress.IsComplete() ? "COMPLETED" : "NOT COMPLETED")</strong>
                        </li>
                    </ul>
                </li>
            </ol>
            @if (Model.YourStatement.IsComplete() && Model.Compliance.IsComplete())
            {
            <button class="govuk-button" data-module="govuk-button" type="submit" >
                Confirm and Submit
            </button>
            }
            <button class="govuk-button" data-module="govuk-button" type="submit">
                Save draft
            </button>
            <a class="govuk-button govuk-button--secondary" href="@Model.CancelUrl">Cancel</a>
        }
    </div>
</div>



