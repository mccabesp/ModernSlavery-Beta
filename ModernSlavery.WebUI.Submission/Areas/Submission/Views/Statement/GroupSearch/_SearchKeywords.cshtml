@model string

<div class="govuk-grid-row finder">
    <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body govuk-!-margin-bottom-2">
            Search for and select organisation(s)
        </p>
        <span class="govuk-hint">
            Enter an organisation name or company number. You can search multiple times.
        </span>
        @*  *@

        <div id="SearchByKeywordsGroup">
            <fieldset class="govuk-fieldset">
                <div class="gov-uk-c-searchbar">
                    <div class="gov-uk-l-searchbar__table">
                        <div class="gov-uk-l-searchbar__cell">
                            <input name="SearchKeywords" id="SearchKeywords" value="@(Model)" class="gov-uk-c-searchbar__input" type="text" autocomplete="on" spellcheck="false" maxlength="100">
                            @Html.ValidationMessage($"SearchKeywords", null, new { @class = "govuk-error-message" })
                        </div>
                        <div class="gov-uk-l-searchbar__cell">
                            <button class="gov-uk-c-searchbar__submit gov-uk-c-searchbar__submit--blue" id="NextStep" type="submit" name="command" value="@BaseViewModel.CommandType.Search" formaction="@Url.Action(nameof(StatementController.GroupSearch))">Search</button>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</div>

