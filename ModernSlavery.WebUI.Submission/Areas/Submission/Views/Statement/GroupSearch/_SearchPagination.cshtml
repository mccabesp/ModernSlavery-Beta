@using ModernSlavery.Core.Classes;
@using ModernSlavery.Core.Models;
@model PagedResult<OrganisationRecord>
@{
    var showPrev = Model.CurrentPage > 1;
    var showNext = Model.CurrentPage < Model.PageCount;

    var prevPage = showPrev ? Model.CurrentPage - 1 : -1;
    var nextPage = showNext ? Model.CurrentPage + 1 : -1;
}
@if (Model.Results.Count > 0)
{
    <div class="grid-row">
        <div class="pagination-container" data-pagecount="@Model.PageCount" data-currentpage="@Model.CurrentPage">

            @if (showPrev)
            {
                <div class="column-half" style="padding: 0">
                    <div class="pagination pagination-prev">
                        <button type="submit" name="command" value="@BaseViewModel.CommandType.SearchPrevious">
                            Previous
                            <span class="visuallyhidden"> Page </span>
                            <span class="pagination-numbers" data-total="@Model.PageCount">@(Model.CurrentPage - 1) of @Model.PageCount</span>
                        </button>
                    </div>
                </div>
            }

            @if (showNext)
            {
                <div class="column-half">
                    <div class="pagination pagination-next">
                        <button type="submit" name="command" value="@BaseViewModel.CommandType.SearchNext">
                            Next
                            <span class="visuallyhidden"> Page </span>
                            <span class="pagination-numbers" data-total="@Model.PageCount">@(Model.CurrentPage + 1) of @Model.PageCount</span>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
}