@using ModernSlavery.Core.Classes;
@using ModernSlavery.Core.Models;
@model PagedResult<OrganisationRecord>
@{
    var showPrev = Model.CurrentPage > 1;
    var showNext = Model.CurrentPage < Model.PageCount;

    var prevPage = showPrev ? Model.CurrentPage - 1 : -1;
    var nextPage = showNext ? Model.CurrentPage + 1 : -1;
}

@if (Model.Results.Count > 0)
{
    <div class="govuk-grid-row pagination">      
            <div class="govuk-grid-column-full" data-pagecount="@Model.PageCount" data-currentpage="@Model.CurrentPage">
                @if (showPrev)
                {
                <div class="pagination-prev">                    
                    <button type="submit" class="pagination-button" name="command" value="@BaseViewModel.CommandType.SearchPrevious">
                        <span class="prev-arrow"></span>
                        <span class="govuk-body govuk-!-font-weight-bold">Previous page </span><br />
                        <span class="pagination-numbers" data-total="@Model.PageCount">@(Model.CurrentPage - 1) of @Model.PageCount</span>
                    </button>
                </div>
                }
                @if (showNext)
                {        
                    
            <div class="pagination-next" display: table-row;>                 
                <button type="submit" class="pagination-button" name="command" value="@BaseViewModel.CommandType.SearchNext">
                    <span class="next-arrow"></span>
                    <span class="govuk-body govuk-!-font-weight-bold">Next page </span><br />
                    <span class="pagination-numbers" data-total="@Model.PageCount">@(Model.CurrentPage + 1) of @Model.PageCount</span>
                </button>
            </div>                   
                }
            </div>
        </div>
 }
