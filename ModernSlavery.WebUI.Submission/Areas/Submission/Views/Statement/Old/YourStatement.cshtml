@{
    Layout = "/Views/GdsLayout.cshtml";
}
@model YourStatementPageViewModel

@section BeforeMain {
    @if (!string.IsNullOrWhiteSpace(Model.BackUrl))
    {
        <a class="govuk-back-link" href="@Model.BackUrl">Back</a>
    }
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { novalidate = "" }))
        {
            @await Html.GovUkValidationSummaryAsync();
            @Html.AntiForgeryToken();
            @Html.HiddenFor(m => m.ReturnToReviewPage);
            @Html.HiddenFor(m => m.SubmissionDeadline);
            @Html.HiddenFor(m => m.Submitted);

            <h1 class="govuk-heading-l">
                @Model.PageTitle
            </h1>

            <h2 class="govuk-heading-s">
                Provide a link to the modern slavery statement on your organisation's website
            </h2>
            <div class="govuk-form-group @Html.SetErrorClass(model => model.StatementUrl, "govuk-form-group--error")">
                <label asp-for="StatementUrl" class="govuk-label">URL</label>
                <input asp-for="StatementUrl" class="govuk-input govuk-input--width-20" inputmode="url" spellcheck="false" placeholder="https://">
                <span asp-validation-for="StatementUrl" class="govuk-error-message"></span>
            </div>

            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset" role="group" aria-describedby="reporting-start-hint">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                        <h2 class="govuk-fieldset__heading">
                            What period does this statement cover?
                        </h2>
                    </legend>
                    <span id="reporting-start-hint" class="govuk-hint">
                        For example, 31 3 1980
                    </span>
                    <div class="app-date-range__container @Html.SetErrorClass(new[] {nameof(Model.StatementStartDate), nameof(Model.StatementEndDate),nameof(Model.StatementStartDay),nameof(Model.StatementStartMonth),nameof(Model.StatementStartYear),nameof(Model.StatementEndDay),nameof(Model.StatementEndMonth),nameof(Model.StatementEndYear)}, "govuk-form-group--error")">
                        <div class="app-date-range__child">
                            <div class="govuk-date-input" id="reporting-start">
                                <div class="govuk-date-input__item">
                                    <div class="govuk-form-group">
                                        <label class="govuk-label govuk-date-input__label" asp-for="StatementStartDay">
                                            Day
                                        </label>
                                        <input asp-for="StatementStartDay" class="govuk-input govuk-date-input__input govuk-input--width-2" inputmode="number" placeholder="DD">
                                    </div>
                                </div>
                                <div class="govuk-date-input__item">
                                    <div class="govuk-form-group">
                                        <label class="govuk-label govuk-date-input__label" asp-for="StatementStartMonth">
                                            Month
                                        </label>
                                        <input asp-for="StatementStartMonth" class="govuk-input govuk-date-input__input govuk-input--width-2" inputmode="number" placeholder="MM">
                                    </div>
                                </div>
                                <div class="govuk-date-input__item">
                                    <div class="govuk-form-group">
                                        <label class="govuk-label govuk-date-input__label" asp-for="StatementStartYear">
                                            Year
                                        </label>
                                        <input asp-for="StatementStartYear" class="govuk-input govuk-date-input__input govuk-input--width-3" inputmode="number" placeholder="YYYY">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="app-date-range__child">
                            <p class="govuk-body">to</p>
                        </div>
                        <div class="app-date-range__child">
                            <div class="govuk-date-input" id="reporting-end">
                                <div class="govuk-date-input__item">
                                    <div class="govuk-form-group">
                                        <label class="govuk-label govuk-date-input__label" asp-for="StatementEndDay">
                                            Day
                                        </label>
                                        <input asp-for="StatementEndDay" class="govuk-input govuk-date-input__input govuk-input--width-2" inputmode="number" placeholder="DD">
                                    </div>
                                </div>
                                <div class="govuk-date-input__item">
                                    <div class="govuk-form-group">
                                        <label class="govuk-label govuk-date-input__label" asp-for="StatementEndMonth">
                                            Month
                                        </label>
                                        <input asp-for="StatementEndMonth" class="govuk-input govuk-date-input__input govuk-input--width-2" inputmode="number" placeholder="MM">
                                    </div>
                                </div>
                                <div class="govuk-date-input__item">
                                    <div class="govuk-form-group">
                                        <label class="govuk-label govuk-date-input__label" asp-for="StatementEndYear">
                                            Year
                                        </label>
                                        <input asp-for="StatementEndYear" class="govuk-input govuk-date-input__input govuk-input--width-3" inputmode="number" placeholder="YYYY">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <span asp-validation-for="StatementStartDay" class="govuk-error-message"></span>
                        <span asp-validation-for="StatementStartMonth" class="govuk-error-message"></span>
                        <span asp-validation-for="StatementStartYear" class="govuk-error-message"></span>
                        <span asp-validation-for="StatementStartDate" class="govuk-error-message"></span>
                        <span asp-validation-for="StatementEndDate" class="govuk-error-message"></span>
                        <span asp-validation-for="StatementEndDay" class="govuk-error-message"></span>
                        <span asp-validation-for="StatementEndMonth" class="govuk-error-message"></span>
                        <span asp-validation-for="StatementEndYear" class="govuk-error-message"></span>
                    </div>
                </fieldset>
            </div>

            <fieldset class="govuk-fieldset">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                    <h2 class="govuk-fieldset__heading">
                        What is the name of the director (or equivalent) that signed off your statement?
                    </h2>
                </legend>

                <div class="govuk-form-group @Html.SetErrorClass(model => model.ApproverFirstName, "govuk-form-group--error")">
                    <label asp-for="ApproverFirstName" class="govuk-label">First name</label>
                    <input asp-for="ApproverFirstName" class="govuk-input govuk-input--width-20" type="text" spellcheck="false">
                    <span asp-validation-for="ApproverFirstName" class="govuk-error-message"></span>
                </div>

                <div class="govuk-form-group @Html.SetErrorClass(model => model.ApproverLastName, "govuk-form-group--error")">
                    <label asp-for="ApproverLastName" class="govuk-label">Last name</label>
                    <input asp-for="ApproverLastName" class="govuk-input govuk-input--width-20" type="text" spellcheck="false">
                    <span asp-validation-for="ApproverLastName" class="govuk-error-message"></span>
                </div>

                <div class="govuk-form-group @Html.SetErrorClass(model => model.ApproverJobTitle, "govuk-form-group--error")">
                    <label asp-for="ApproverJobTitle" class="govuk-label">Job title</label>
                    <input asp-for="ApproverJobTitle" class="govuk-input govuk-input--width-20" type="text" spellcheck="false">
                    <span asp-validation-for="ApproverJobTitle" class="govuk-error-message"></span>
                </div>
            </fieldset>

            <div class="govuk-form-group @Html.SetErrorClass(new[] {nameof(Model.ApprovedDate), nameof(Model.ApprovedDay),nameof(Model.ApprovedMonth),nameof(Model.ApprovedYear)}, "govuk-form-group--error")">
                <fieldset class="govuk-fieldset" role="group" aria-describedby="statement-approved-hint">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                        <h2 class="govuk-fieldset__heading">
                            What date was your statement approved by the board or equivalent management body?
                        </h2>
                    </legend>
                    <span id="statement-approved-hint" class="govuk-hint">
                        For example, 31 3 1980
                    </span>
                    <div class="govuk-date-input" id="statement-approved">
                        <div class="govuk-date-input__item">
                            <div class="govuk-form-group">
                                <label class="govuk-label govuk-date-input__label" asp-for="ApprovedDay">
                                    Day
                                </label>
                                <input asp-for="ApprovedDay" class="govuk-input govuk-date-input__input govuk-input--width-2" inputmode="number" placeholder="DD">
                            </div>
                        </div>
                        <div class="govuk-date-input__item">
                            <div class="govuk-form-group">
                                <label class="govuk-label govuk-date-input__label" asp-for="ApprovedMonth">
                                    Month
                                </label>
                                <input asp-for="ApprovedMonth" class="govuk-input govuk-date-input__input govuk-input--width-2" inputmode="number" placeholder="MM">
                            </div>
                        </div>
                        <div class="govuk-date-input__item">
                            <div class="govuk-form-group">
                                <label class="govuk-label govuk-date-input__label" asp-for="ApprovedYear">
                                    Year
                                </label>
                                <input asp-for="ApprovedYear" class="govuk-input govuk-date-input__input govuk-input--width-3" inputmode="number" placeholder="YYYY">
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="ApprovedDay" class="govuk-error-message"></span>
                    <span asp-validation-for="ApprovedMonth" class="govuk-error-message"></span>
                    <span asp-validation-for="ApprovedYear" class="govuk-error-message"></span>
                    <span asp-validation-for="ApprovedDate" class="govuk-error-message"></span>

                </fieldset>
            </div>

            <button class="govuk-button govuk-!-margin-right-1" data-module="govuk-button" type="submit" name="command" value="@BaseViewModel.CommandType.Continue">
                Continue
            </button>

            <button class="govuk-button govuk-button--secondary" data-module="govuk-button" type="submit" name="command" value="@BaseViewModel.CommandType.Cancel">
                Cancel
            </button>
        }
    </div>
</div>
