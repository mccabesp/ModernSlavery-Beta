@{
    Layout = "/Views/GdsLayout.cshtml";
}
@model ProgressPageViewModel
<a class="govuk-back-link" href="@Model.BackUrl">Back</a>
<div class="govuk-grid-row">
    <div class="govuk-column-two-thirds">
        @using (Html.BeginForm())
        {
            var controller = ViewData["Controller"] as BaseController;

            @await Html.CustomValidationSummaryAsync();
            @Html.AntiForgeryToken();
            @Html.HiddenFor(m => m.ContinueUrl);


            @(Html.GovUkErrorSummary(new[]
                {
                    nameof(ProgressPageViewModel.IncludesMeasuringProgress),
                    nameof(ProgressPageViewModel.ProgressMeasures),
                    nameof(ProgressPageViewModel.KeyAchievements),
                    nameof(ProgressPageViewModel.StatementYears),
                }))

        <h1 class="govuk-heading-l">
            @Model.PageTitle
        </h1>
            @(Html.GovUkRadiosFor(
        m => m.IncludesMeasuringProgress,
        new FieldsetViewModel
        {
            Legend = new LegendViewModel
            {
                Text = Model.IncludesMeasuringProgress.GetAttribute<DisplayAttribute>().Name,
                Classes = "govuk-fieldset__legend--m"
            },
            Classes = "govuk-!-margin-top-6"
        }));

            <div class="govuk-form-group">
                <h1 class="govuk-label-wrapper">
                    <label asp-for="ProgressMeasures" class="govuk-label govuk-label--l" for="measuring-progress">
                    </label>
                </h1>
                <textarea asp-for="ProgressMeasures" class="govuk-textarea" id="more-detail" name="measuring-progress" rows="5"></textarea>
            </div>

            <div class="govuk-form-group">
                <h1 class="govuk-label-wrapper">
                    <label asp-for="KeyAchievements" class="govuk-label govuk-label--l" for="key-achievements">
                    </label>
                </h1>
                <textarea asp-for="KeyAchievements" class="govuk-textarea" id="more-detail" name="key-achievements" rows="5"></textarea>
            </div>


            @(Html.GovUkRadiosFor(
                    m => m.StatementYears,
                    new FieldsetViewModel
                    {
                        Legend = new LegendViewModel
                        {
                            Text = Model.StatementYears.GetAttribute<DisplayAttribute>().Name,
                            Classes = "govuk-fieldset__legend--m"
                        },
                        Classes = "govuk-!-margin-top-6"
                    },
                    new HintViewModel
                    {
                        Text = "If your statement is for a group of organisations, please select the answer that applies to the organisation with the longest history of producing statements."
                    }))


            <button class="govuk-button" data-module="govuk-button" type="submit">
                Continue
            </button>
            <button class="govuk-button govuk-button--secondary" data-module="govuk-button" type="submit">
                Cancel
            </button>
        }
    </div>
</div>
