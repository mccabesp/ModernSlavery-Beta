@{
    Layout = "/Views/GdsLayout.cshtml";
}
@model PoliciesViewModel
@using ModernSlavery.Core.Entities.StatementSummary; 
@section BeforeMain {
    <a class="govuk-back-link" href="@Model.BackUrl">Back</a>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { novalidate = "" }))
        {
            @await Html.GovUkValidationSummaryAsync();
            @Html.AntiForgeryToken();
            @Html.HiddenFor(m => m.Submitted);

            <h1 class="govuk-heading-l">
                @Model.PageTitle
            </h1>

            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset" aria-describedby="organisation-hint">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--s">
                        <h2 class="govuk-fieldset__heading">
                            Do your organisation`s modern slavery policies or codes include any of the following provisions?
                        </h2>
                    </legend>
                    <span id="organisation-hint" class="govuk-hint">
                        Select all that apply
                    </span>
                    <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                        @foreach (var policyType in Enums.GetValues<IStatementSummary1.PolicyTypes>())
                        {
                            <div class="govuk-checkboxes__item">
                                <input name="Policies" value="@((int)policyType)" id="@($"policy{(int)policyType}")" checked=@(Model.Policies.Contains(policyType)) class="govuk-checkboxes__input" type="checkbox" data-aria-controls="policies-conditional@((int)policyType)">
                                <label class="govuk-label govuk-checkboxes__label" for="@($"policy{(int)policyType}")">
                                    @policyType.GetEnumDescription()
                                </label>
                            </div>
                            @if (policyType== IStatementSummary1.PolicyTypes.Other)
                            {
                                <div class="govuk-checkboxes__conditional govuk-checkboxes__conditional--hidden @Html.SetErrorClass(model => model.OtherPolicies, "govuk-form-group--error")" id="policies-conditional@((int)policyType)">
                                    <div class="govuk-form-group">
                                        <label class="govuk-label" for="other">
                                            Please provide details
                                        </label>
                                        <textarea asp-for="OtherPolicies" name="OtherPolicies" class="govuk-textarea" id="policies-other" spellcheck="false" rows="5">@Model.OtherPolicies</textarea>
                                        <span asp-validation-for="OtherPolicies" class="govuk-error-message"></span>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </fieldset>
            </div>

            <button class="govuk-button govuk-!-margin-right-1" data-module="govuk-button" type="submit" name="command" value="@BaseViewModel.CommandType.Continue">
                Continue
            </button>

            @if (Model.GetStatus() == BaseViewModel.Status.Incomplete)
            {
                <a class="govuk-button" href="@(Model.SkipUrl)">Skip</a>
            }
        }

    </div>

</div>
