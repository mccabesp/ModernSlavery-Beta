@{
    Layout = "/Views/GdsLayout.cshtml";    
}
@model HighestRisksViewModel
@section BeforeMain {
    <a class="govuk-back-link" href="@Model.BackUrl">Back</a>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { novalidate = "" }))
        {
            @await Html.GovUkValidationSummaryAsync();
            @Html.AntiForgeryToken();
            @Html.HiddenFor(m => m.Submitted);

            <h1 class="govuk-heading-l">
                @Model.PageTitle
            </h1>

            <p class="govuk-body">
                What did you identify as your highest modern slavery risks in your operations and supply chain during the period of the statement? Briefly describe up to 3 risks.
            </p>

            <p class="govuk-hint">
                For example, ‘Bangladeshi migrant workers in apparel factories in Mauritius’ or ‘Temporary construction workers building new retail premises in the UK’
            </p>


            <fieldset class="govuk-fieldset">
                <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="200">
                    <div class="govuk-form-group @Html.SetErrorClass(model => model.HighRisk1, "govuk-form-group--error")">
                        <label class="govuk-label" for="high-risk-detail-1">
                            Risk
                        </label>
                        <textarea asp-for="HighRisk1" class="govuk-textarea govuk-js-character-count" rows="5" aria-describedby="high-risk-detail-1-info high-risk-detail-1-hint">@(Model.HighRisk1)</textarea>
                    </div>
                    <div id="high-risk-detail-1-hint" class="govuk-hint govuk-character-count__message" aria-live="polite">
                        You have 200 characters remaining
                    </div>
                    <span asp-validation-for="HighRisk1" class="govuk-error-message"></span>
                </div>
                <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="200">
                    <div class="govuk-form-group @Html.SetErrorClass(model => model.HighRisk2, "govuk-form-group--error")">
                        <label class="govuk-label" for="high-risk-detail-2">
                            Risk
                        </label>
                        <textarea asp-for="HighRisk2" class="govuk-textarea govuk-js-character-count" rows="5" aria-describedby="high-risk-detail-2-info high-risk-detail-2-hint">@(Model.HighRisk2)</textarea>
                    </div>
                    <div id="high-risk-detail-2-hint" class="govuk-hint govuk-character-count__message" aria-live="polite">
                        You have 200 characters remaining
                    </div>
                    <span asp-validation-for="HighRisk2" class="govuk-error-message"></span>
                </div>
                <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="200">
                    <div class="govuk-form-group @Html.SetErrorClass(model => model.HighRisk3, "govuk-form-group--error")">
                        <label class="govuk-label" for="high-risk-detail-3">
                            Risk
                        </label>
                        <textarea asp-for="HighRisk3" class="govuk-textarea govuk-js-character-count" rows="5" aria-describedby="high-risk-detail-3-info high-risk-detail-3-hint">@(Model.HighRisk3)</textarea>
                    </div>
                    <div id="high-risk-detail-3-hint" class="govuk-hint govuk-character-count__message" aria-live="polite">
                        You have 200 characters remaining
                    </div>
                    <span asp-validation-for="HighRisk3" class="govuk-error-message"></span>
                </div>
            </fieldset>

            <button class="govuk-button govuk-!-margin-right-1" data-module="govuk-button" type="submit" name="command" value="@BaseViewModel.CommandType.Continue">
                Save and continue
            </button>

            @if (Model.GetStatus() == BaseViewModel.Status.Incomplete)
            {
                <a class="govuk-button" href="@(Model.SkipUrl)">Skip this question</a>
            }
        }
    </div>

</div>
