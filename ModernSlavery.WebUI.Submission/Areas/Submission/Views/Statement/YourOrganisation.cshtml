@using ModernSlavery.WebUI.GDSDesignSystem.Attributes
@{
    Layout = "/Views/GdsLayout.cshtml";
}
@model YourOrganisationPageViewModel
<a class="govuk-back-link" href="@Model.BackUrl">Back</a>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @using (Html.BeginForm())
        {
            @await Html.CustomValidationSummaryAsync();
            @Html.AntiForgeryToken();
            @Html.HiddenFor(m => m.ReturnToReviewPage);
            @Html.HiddenFor(m => m.ReturnToReviewPage);
            @Html.HiddenFor(m => m.Submitted);

            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset" aria-describedby="organisation-hint">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h1 class="govuk-heading-l">
                            @Model.PageTitle
                        </h1>
                        <h2 class="govuk-heading-m">
                            Which sector does your organisation operate in?
                        </h2>
                    </legend>
                    <span id="organisation-hint" class="govuk-hint">
                        Select all that apply
                    </span>
                    <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                        @foreach (var sectorType in Model.SectorTypes)
                        {
                            <div class="govuk-checkboxes__item">
                                <input name="Sectors" value="@sectorType.Id" id="@($"sector{sectorType.Id}")" checked=@(Model.Sectors.Contains(sectorType.Id)) class="govuk-checkboxes__input" type="checkbox" data-aria-controls="organisation-conditional-@(sectorType.Id)">
                                <label class="govuk-label govuk-checkboxes__label" for="@($"sector{sectorType.Id}")">
                                    @sectorType.Description
                                </label>
                            </div>
                            @if (sectorType.Description.Equals("Other"))
                            {
                                <div class="govuk-checkboxes__conditional govuk-checkboxes__conditional--hidden @Html.SetErrorClass(model => model.OtherSector, "govuk-form-group--error")" id="organisation-conditional-@(sectorType.Id)">
                                    <div class="govuk-form-group">
                                        <label class="govuk-label" for="other">
                                            Please specify
                                        </label>
                                        <textarea asp-for="OtherSector" class="govuk-textarea" id="contact-by-email" name="OtherSector" maxlength="128" rows="5">@Model.OtherSector</textarea>
                                        <span asp-validation-for="OtherSector" class="govuk-error-message"></span>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </fieldset>
            </div>

            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h2 class="govuk-heading-m">
                            What was your turnover or budget during the last financial accounting year?
                        </h2>
                    </legend>
                    <div class="govuk-radios">
                        @foreach (YourOrganisationPageViewModel.TurnoverRanges item in (Enum.GetValues(typeof(YourOrganisationPageViewModel.TurnoverRanges)).Cast<YourOrganisationPageViewModel.TurnoverRanges>().Where(x => x != YourOrganisationPageViewModel.TurnoverRanges.NotProvided)))
                        {
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="Turnover-@(item)" name="Turnover" type="radio" checked="@(Model.Turnover==item)" value="@(item)">
                                <label class="govuk-label govuk-radios__label" for="Turnover-@(item)">
                                    @(item.GetAttribute<GovUkRadioCheckboxLabelTextAttribute>()?.Text)
                                </label>
                            </div>
                        }
                    </div>
                </fieldset>
            </div>


            <button class="govuk-button" data-module="govuk-button" type="submit" name="command" value="@BaseViewModel.CommandType.Continue">
                Continue
            </button>

            <button class="govuk-button govuk-button--secondary" data-module="govuk-button" type="submit" name="command" value="@BaseViewModel.CommandType.Cancel">
                Cancel
            </button>
        }
    </div>
</div>
