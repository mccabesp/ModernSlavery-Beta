@using ModernSlavery.WebUI.GDSDesignSystem.Attributes
@{
    Layout = "/Views/GdsLayout.cshtml";
}
@model MonitoringViewModel

@section BeforeMain {
    <a class="govuk-back-link" href="@Model.BackUrl">Back</a>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @using (Html.BeginForm())
        {
            @await Html.GovUkValidationSummaryAsync();
            @Html.AntiForgeryToken();
            @Html.HiddenFor(m => m.Submitted);

            <h1 class="govuk-heading-l">
                @Model.PageTitle
            </h1>

            <div class="govuk-form-group">
                <h1 class="govuk-label-wrapper">
                    <label asp-for="OtherWorkConditionsMonitoring" class="govuk-label govuk-label--s">
                        Tell us briefly what you did
                    </label>
                </h1>
                <textarea asp-for="OtherWorkConditionsMonitoring" class="govuk-textarea " rows="5">@Model.OtherWorkConditionsMonitoring</textarea>
            </div>

            <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="200">
                <div class="govuk-form-group">
                    <label asp-for="OtherWorkConditionsMonitoring" class="govuk-label" >
                        Tell us briefly what you did
                    </label>                    
                    <textarea asp-for="OtherWorkConditionsMonitoring" class="govuk-textarea govuk-js-character-count" rows="5" aria-describedby="with-hint-info with-hint-hint"></textarea>
                </div>
                <div id="with-hint-info" class="govuk-hint govuk-character-count__message" aria-live="polite">
                    You can enter up to 200 characters
                </div>

            </div>


            <button class="govuk-button govuk-!-margin-right-1" data-module="govuk-button" type="submit" name="command" value="@BaseViewModel.CommandType.Continue">
                Save and continue
            </button>

            @if (Model.GetStatus() == BaseViewModel.Status.Incomplete)
            {
                <a class="govuk-button" href="@(Model.SkipUrl)">Skip this question</a>
            }
        }
    </div>
</div>
