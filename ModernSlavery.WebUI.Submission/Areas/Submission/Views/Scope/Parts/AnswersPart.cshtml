@model ScopingViewModel
@{
    var reason = "<ul><li>"
        + string.Join("</li><br><li>", Model.EnterAnswers.FriendlyReasonOptions)
        + "</li></ul>";
    var answers = !Model.UserIsRegistered
        ? new CheckYourAnswers(
            new CheckYourAnswer("Reason your organisation is not required to publish a modern slavery statement on your website", reason, "ReasonAnswer"),
            new CheckYourAnswer("Contact name", Model.EnterAnswers.FullName, "FullNameAnswer"),
            new CheckYourAnswer("Job title", Model.EnterAnswers.JobTitle, "JobTitleAnswer"),
            new CheckYourAnswer("Contact email", Model.EnterAnswers.EmailAddress, "EmailAddressAnswer")
            )
        : new CheckYourAnswers(
            new CheckYourAnswer("Reason your organisation is not required to publish a modern slavery statement on your website", reason, "ReasonAnswer"));
}

@await Html.PartialModelAsync(answers)