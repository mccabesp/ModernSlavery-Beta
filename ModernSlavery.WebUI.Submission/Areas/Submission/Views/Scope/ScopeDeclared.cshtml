@{
    Layout = "~/Views/DfeTemplate.cshtml";
    Title = "We need more information";
}
@model DeclareScopeModel
<main id="content" role="main">
    <div class="grid-row">
        <div class="column-two-thirds">
            <h1 class="heading-large">
                <span class="heading-secondary">@Model.OrganisationName</span>
            </h1>
            <div class="govuk-box-highlight">
                <h1 class="bold-large">
                    You've confirmed your organisation was <span> @(Model.ScopeStatus == ScopeStatuses.OutOfScope ? "not " : "")required to publish a modern slavery statement on its website in @Model.ReportingDeadline.Year</span>
                </h1>
            </div>
            <a class="button" href="@Url.Action("ManageOrganisation", "Submission", new {organisationIdentifier = ViewContext.RouteData.Values["organisationIdentifier"]})" role="button">Continue</a>
        </div>
    </div>
</main>