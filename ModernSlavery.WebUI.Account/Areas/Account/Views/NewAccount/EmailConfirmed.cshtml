@inject IWebService WebService
@{
    ViewBag.Title = "Email confirmed - Modern Slavery reporting service";
    Layout = "~/Views/DfeTemplate.cshtml";
}
<div id="email-confirmed-content" class="grid-row">
    <div class="column-two-thirds">
        <div class="govuk-box-highlight">
            <h1 class="bold-large">You've confirmed your email address</h1>
        </div>

        <div class="subsection">
            <p class="text">
                To complete the registration process for Modern Slavery reporting please continue.
            </p>
        </div>
        <a id="CompleteSignup" class="button" asp-action="ManageOrganisations" asp-controller="Submission" asp-area="Submission" role="button">Continue</a>
    </div>
</div>