@{
    Layout = "~/Views/DfeTemplate.cshtml";
    ViewBag.Title = "Password email sent - Modern Slavery reporting service";
}
<main id="content" role="main">
    <div class="grid-row">
        <div class="column-two-thirds">
            <h1 class="heading-large">
               Reset your password
            </h1>
            <div class="content-body">
                <div class="text">
                    <p class="lede">
                        If your account still exists we have emailed a link allowing you to reset your password to<br>
                        <b>@ViewBag.EmailAddress</b>
                    </p>
                    <p>If you don’t get the email within the next few minutes, check your junk email or you may need to <a href="@Url.Action("AboutYou", "NewAccount")">create an account</a> again.</p>
                </div>
            </div>
        </div>
    </div>
</main>