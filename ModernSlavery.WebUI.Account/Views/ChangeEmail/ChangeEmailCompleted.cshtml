@{
    Layout = "~/Views/DfeTemplate.cshtml";
}
@model ChangeEmailStatusViewModel
@inject IWebService WebService
<div class="grid-row">

    <div class="column-two-thirds">

        <div class="govuk-box-highlight">
            <h1 class="heading-large">
                Your email address has been updated
            </h1>
        </div>

        <p>You have successfully changed your account email to @Model.NewEmail</p>

        <h2 class="heading-medium">More Options</h2>
        <ul class="list">
            <li>
                <a href="@(Url.Action<AccountController>(nameof(AccountController.ManageAccount)))">Manage account</a>
            </li>

            <li>
                <a href="@Url.Action("ManageOrganisations", "Submission")">Manage organisations</a>
            </li>
        </ul>

    </div>

</div>