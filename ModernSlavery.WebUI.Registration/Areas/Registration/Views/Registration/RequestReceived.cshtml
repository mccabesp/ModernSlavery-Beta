@using ModernSlavery.Core.Models
@inject IWebService WebService
@inject SharedOptions sharedOptions
@{
    Layout = "~/Views/DfeTemplate.cshtml";
    ViewBag.Title = "Registration request received - Modern Slavery reporting service";
}
<div id="request-received-content">
    @await Html.PartialAsync("_ServiceInfo")

    <div class="grid-row">
        <div class="column-two-thirds">
            <div class="dynamic-content privateManual publicManual" style="display: block;">
                <div class="govuk-box-highlight">
                    <h1 class="bold-medium">
                        We’ve got your details.
                        <br />
                        We will review them and get in touch to let you know if your registration was successful.
                    </h1>
                </div>
                <div class="bold-small">
                    What happens next
                </div>            
                <p>If we need more information to complete your registration, we will call or email you.</p>
                <p>If you have not heard from us within 5 working days, check your junk email folder.</p>
                <p>
                    If there is still no email from us, or for any other help with your registration, contact 
                    <a href="mailto:@(sharedOptions.MsuReportingEmail)" target="_blank">@sharedOptions.MsuReportingEmail</a>
                </p>
                <div class="bold-small">
                    More options
                </div>
                <p>
                    <a href="@Url.Action("OrganisationType")">Add another organisation</a>
                </p>
                <p>
                    <a asp-action="ManageOrganisations" asp-controller="Submission" asp-area="Submission">Manage organisations</a>
                </p>
            </div>
        </div>
    </div>
</div>