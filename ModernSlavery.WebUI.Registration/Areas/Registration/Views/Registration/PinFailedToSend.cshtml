@using ModernSlavery.Core.Models
@model PinFailedToSendViewModel
@inject SharedOptions sharedOptions
@{Layout = "~/Views/GdsLayout.cshtml";}
@{
    ViewBag.Title = "Sorry, there is a problem with the service – Modern Slavery Reporting service – GOV.UK";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Sorry, there is a problem with the service</h1>
        <p class="govuk-body">We saved your registration request for @(Model.OrganisationName).</p>
        <p class="govuk-body">
            Contact <a href="mailto:@(sharedOptions.MsuReportingEmail)" target="_blank">@sharedOptions.MsuReportingEmail</a> to complete your registration.
        </p>
    </div>
</div>