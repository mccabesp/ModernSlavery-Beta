@inject IWebService WebService
@inject ModernSlavery.Core.Interfaces.IObfuscator Obfuscator
@model RemoveOrganisationModel
@{
    Layout = "~/Views/GdsLayout.cshtml";
    Title = "Remove organisation reason";
    var userId = Obfuscator.DeObfuscate(Model.EncUserId).ToInt64();
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-panel govuk-panel--confirmation ">
            <h1 class="govuk-panel__title">
                Removal complete
            </h1>
        </div>

        @if (Controller.CurrentUser.UserId == userId && Controller.IsImpersonatingUser == false)
        {
            <p class="govuk-body">
                You can no longer submit a modern slavery statement for @Model.OrganisationName. You will receive an email notification shortly.
            </p>
        }
        else
        {
            <p class="govuk-body">
                @Model.UserName can no longer submit a modern slavery statement for @Model.OrganisationName. They will receive an email notification shortly.
            </p>
        }

        <div class="govuk-form-group">
            <span class="govuk-!-font-weight-bold">
                More options
            </span>
            <p class="govuk-body">
                <a class="govuk-link" asp-action="ManageOrganisations" asp-controller="Submission" asp-area="Submission">Your organisations</a>
            </p>
        </div>
    </div>
</div>