@inject IWebService WebService
@{
    Layout = "~/Views/DfeTemplate.cshtml";
    ViewBag.Title = "Service activated - Modern Slavery reporting service";
}
<div class="grid-row">
    <div class="column-two-thirds">
        <div class="govuk-box-highlight">
            <h1 class="bold-large">You can now submit a modern slavery statement for this organisation.</h1>
        </div>
        <div class="subsection">
            <dl class="govuk-check-your-answers cya-questions-short">
                <div>
                    <dt class="cya-question">
                        Organisation name
                    </dt>
                    <dd class="cya-answer">
                        @ViewBag.OrganisationName
                    </dd>
                </div>
            </dl>
        </div>       
        <br/>
        <p>
            <a class="button" asp-action="ManageOrganisations" asp-controller="Submission" asp-area="Submission">Continue</a>
        </p>
    </div>
</div>