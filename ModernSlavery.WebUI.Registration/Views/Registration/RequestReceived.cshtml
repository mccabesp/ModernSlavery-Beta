@using ModernSlavery.Core.Models
@inject IWebService WebService
@inject SharedOptions sharedOptions
@{
    Layout = "~/Views/DfeTemplate.cshtml";
    ViewBag.Title = "Registration request received - Modern Slavery reporting service";
}
<div id="request-received-content">
    @await Html.PartialAsync("_ServiceInfo")

    <div class="grid-row">
        <div class="column-two-thirds">
            <div class="dynamic-content privateManual publicManual" style="display: block;">
                <div class="govuk-box-highlight">
                    <h1 class="bold-medium">
                        We’ve got your details.
                        <br />
                        We will review them and get in touch to confirm.
                    </h1>
                </div>
                <div class="bold-small">
                    What happens next.
                </div>
                <p>
                    The
                    @if (!string.IsNullOrWhiteSpace(ViewBag.TestUrl))
                    {
                        <a data-name="testurl" href="@ViewBag.TestUrl">
                            Government Equalities Office
                        </a>
                    }
                    else
                    {
                        <span>Government Equalities Office</span>
                    }
                    will review your details and get in touch within 5 working days to confirm your registration.
                </p>
                <p>If we need more information to complete your registration, we will call or email you.</p>
                <p>If you have not heard from us after 5 working days, please check your junk email folder.</p>
                <p>For help with your registration, please contact <a href="mailto:@(sharedOptions.GpgReportingEmail)" target="_blank">@sharedOptions.GpgReportingEmail</a></p>
                <div class="bold-small">
                    More options
                </div>
                <p>
                    <a href="@Url.Action("OrganisationType")">Add another organisation</a>
                </p>
                <p>
                    <a href="@Url.Action("ManageOrganisations", "Submission")">Manage Organisations</a>
                </p>
            </div>
        </div>
    </div>
</div>