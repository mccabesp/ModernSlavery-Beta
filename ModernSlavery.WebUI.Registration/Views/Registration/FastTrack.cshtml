@model FastTrackViewModel
@{
    Layout = "~/Views/DfeTemplate.cshtml";
    ViewBag.Title = "Find your organisation - Modern Slavery reporting service";
}

<a id="BackLink" class="link-back" href="@Url.Action("OrganisationType")">Back <span class="visuallyhidden"> to the previous question</span></a>
<div id="grid-row">
    <div class="column-two-thirds">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @await Html.CustomValidationSummaryAsync()

            <h1 class="heading-large">
                Fast track registration
            </h1>

            <div class="dynamic-content default-content">

                <p>
                    If you have received a letter you can enter your employer reference and security code to fast track your organisation`s registration
                </p>

                <div class="form-group @Html.SetErrorClass(model => model.EmployerReference, "error")">
                    @Html.LabelFor(model => model.EmployerReference)
                    @Html.ValidationMessageFor(model => model.EmployerReference, "", new { @class = "error-danger" })
                    <div class="col-md-10">
                        @Html.CustomEditorFor(model => model.EmployerReference, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group @Html.SetErrorClass(model => model.SecurityCode, "error")">
                    @Html.LabelFor(model => model.SecurityCode)
                    @Html.ValidationMessageFor(model => model.SecurityCode, "", new { @class = "error-danger" })
                    <div class="col-md-10">
                        @Html.CustomEditorFor(model => model.SecurityCode, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <input type="submit" class="button" value="Continue" />

            <div>
                <a href="@Url.Action("ManageOrganisations", "Submission")" style="display: inline-block; margin-top: 1em;">Cancel</a>
            </div>
        }
    </div>
</div>