@model SearchViewModel

<div id="SearchByKeywordsGroup" class="govuk-form-group" style="position: relative;">
  
        @if (Title != null)
        {
            <h1 class="govuk-heading-xl govuk-!-margin-bottom-3" id="page-title">
                @Title
            </h1>
            <p class="govuk-body">
                This is currently a voluntary service. Not all organisations have added their statements to the registry yet.
            </p>
        }
        @if (ViewBag.SubTitle != null)
        {
            <span class="govuk-hint">
                @ViewBag.SubTitle
            </span>
        }
        <div class="gov-uk-c-searchbar ">
            <div class="gov-uk-l-searchbar__table">               
                <div class="gov-uk-l-searchbar__cell">
                    <input type="search"
                           id="FinderKeywords"
                           value="@(Model.Search)"
                           class="gov-uk-c-searchbar__input"
                           name="Search"
                           autocomplete="off"
                           spellcheck="false"
                           title="Search"
                           aria-labelledby="page-title" />
                    @Html.ValidationMessageFor(model => model.Search, null, new { @class = "govuk-error-message" })

                </div>
                <div class="gov-uk-l-searchbar__cell">
                    <button class="gov-uk-c-searchbar__submit gov-uk-c-searchbar__submit--blue" id="NextStep" type="submit">Search</button>
                </div>

            </div>
        </div>


</div>