@using ModernSlavery.Core.SharedKernel.Options
@inject GlobalOptions globalOptions
@{
    ViewBag.Title = "Modern Slavery statement";
    ViewBag.pageDescription = "Find and compare Modern Slavery information reported by employers. Learn more about Modern Slavery and how to eliminate it.";
    ViewBag.pageClass = "landing-page";
    Layout = "~/Views/GovUkFrontend/GovUkFrontendLayout.cshtml";
    var controller = ViewData["Controller"] as ViewingController;
}

@section BeforeMain {
    <div class="hero-banner">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-xl hero-banner-content govuk-!-margin-top-6">Search and compare Modern Slavery statements</h1>
                <p class="govuk-body hero-banner-content">Employers with 250 or more employees have published their figures comparing men and women&rsquo;s average pay across the organisation.</p>
                <partial name="Launchpad/Parts/SearchByEmployer" />
            </div>
        </div>
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds govuk-!-margin-top-3 govuk-!-margin-bottom-6">
                <p class="govuk-body">
                    <a href="/viewing/search-results" class="govuk-link hero-banner-content">
                        Or browse all employers and compare data
                    </a>
                </p>
                <p class="govuk-body">
                    <a href="/viewing/download" class="govuk-link hero-banner-content">
                        Download all Modern Slavery statement
                    </a>
                </p>

            </div>
        </div>
    </div>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h2 class="govuk-heading-l">Report your Modern Slavery statement</h2>
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">
        <h3 class="govuk-heading-m">How to use this service</h3>
        <p class="govuk-body">
            <a href="@Url.Action("StepByStepStandalone", "ReportingStepByStep")" class="govuk-link govuk-!-font-weight-bold">Employer step-by-step guidance</a>
        </p>
        <p class="govuk-body">Find out about the process involved, and find links to detailed guidance that will help you to use this service.</p>
    </div>
    <div class="govuk-grid-column-one-third">
        <h3 class="govuk-heading-m">Report your Modern Slavery statement</h3>
        <p class="govuk-body">
            <a href="@(globalOptions.StartUrl ?? Url.Action(nameof(OrganisationController.ManageOrganisations), "Organisation"))"
               class="govuk-link govuk-!-font-weight-bold">
                Submit Modern Slavery statement
            </a>
        </p>
        <p class="govuk-body">For employers to submit their Modern Slavery statement and supporting statement.</p>
    </div>
</div>

<hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h3 class="govuk-heading-m">Understanding Modern Slavery</h3>
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">
        <p class="govuk-body">
            <a href="/public/assets/pdf/understand-your-gender-pay-gap.pdf" rel="download" download="true"
               class="govuk-link govuk-!-font-weight-bold">
                Eight ways to understand your organisation's Modern Slavery
            </a>
        </p>
        <p class="govuk-body">Identify potential causes of Modern Slavery in your organisation.</p>
    </div>
    <div class="govuk-grid-column-one-third">
        <p class="govuk-body">
            <a href="/public/assets/pdf/gender-pay-gap-explained.pdf" rel="download" download="true"
               class="govuk-link govuk-!-font-weight-bold">
                Modern Slavery regulations explained
            </a>
        </p>
        <p class="govuk-body">Modern Slavery regulations and equal pay.</p>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h3 class="govuk-heading-m">How to eliminate Modern Slavery</h3>
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third">
        <p class="govuk-body">
            <a href="@Url.Action("Overview", "ActionHub")" class="govuk-link govuk-!-font-weight-bold">
                Actions to close the gap
            </a>
        </p>
        <p class="govuk-body">Recommended actions for employers that make a difference.</p>
    </div>
    <div class="govuk-grid-column-one-third">
        <p class="govuk-body">
            <a href="/public/assets/pdf/action-plan-guidance.pdf" rel="download" download="true"
               class="govuk-link govuk-!-font-weight-bold">
                Four steps to developing a Modern Slavery action plan
            </a>
        </p>
        <p class="govuk-body">A step by step guide for employers to develop an effective action plan.</p>
    </div>
</div>

<hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

<partial name="Launchpad/Parts/PrototypeServiceSurveyIntroAndLink" />

@section AfterLoadedCompiledScripts {
    <script src="~/assets/javascripts/typeahead.bundle.min.js?v=1.2.0"></script>
    <script>
        new GOVUK.SuggestEmployer({
            formId: '',
            keywordsId: 'SearchEmployers'
        });
    </script>
}
