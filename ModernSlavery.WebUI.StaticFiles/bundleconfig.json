[
  // bundle css for DfeTemplate layout
  {
    "outputFileName": "wwwroot/assets/stylesheets/application.min.css",
    "inputFiles": [ "wwwroot/assets/stylesheets/**/!(*.min).css" ],
    "minify": {
      "enabled": true
    }
  },
  // bundle js for DfeTemplate layout
  {
    "outputFileName": "wwwroot/assets/javascripts/application.min.js",
    "inputFiles": [ "wwwroot/assets/javascripts/**/!(*.min).js" ],
    "minify": {
      "enabled": true,
      "renameLocals": true
    }
  },
  // bundle js  for GdsTemplate layout
  {
    "outputFileName": "wwwroot/scripts/app.min.js",
    "inputFiles": [ "wwwroot/scripts/**/!(*.min).js" ],
    "minify": {
      "enabled": true,
      "renameLocals": true
    }
  }
]