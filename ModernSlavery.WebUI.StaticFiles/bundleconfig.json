[
  // bundle css for DfeTemplate layout
  {
    "outputFileName": "wwwroot/assets/stylesheets/application.min.css",
    "inputFiles": [ "wwwroot/assets/stylesheets/**/!(*.min).css" ],
    "minify": {
      "enabled": true
    }
  },
  // bundle js for DfeTemplate layout
  {
    "outputFileName": "wwwroot/assets/javascripts/application.min.js",
    "inputFiles": [
      "wwwroot/assets/javascripts/Application/**/!(*.min).js",
      "wwwroot/assets/javascripts/GOVUK/**/!(*.min).js"
    ],
    "minify": {
      "enabled": true,
      "renameLocals": true
    }
  },
  // bundle js  for GdsTemplate layout
  {
    "outputFileName": "wwwroot/assets/scripts/app.min.js",
    "inputFiles": [ "wwwroot/assets/scripts/**/!(*.min).js" ],
    "minify": {
      "enabled": true,
      "renameLocals": true
    }
  },
  // bundle js for individual pages
  {
    "outputFileName": "wwwroot/assets/javascripts/page/uploads.min.js",
    "inputFiles": [ "wwwroot/assets/javascripts/page/uploads.js" ],
    "minify": {
      "enabled": true,
      "renameLocals": true
    }
  }

]